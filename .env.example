BOT_TOKEN=your_telegram_bot_token

# Option A: rTorrent watch directory (preferred)
# Set to the directory rTorrent watches to auto-load .torrent files
WATCH_DIR=/path/to/rtorrent/watch

# Option B: rTorrent SCGI address for XML-RPC via rtxmlrpc
# Required for /status and when WATCH_DIR is not used for adding
RTORRENT_SCGI=127.0.0.1:5000

# Temporary directory for incoming files
TMP_DIR=./tmp

